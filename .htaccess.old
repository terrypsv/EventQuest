# Rediriger les erreurs 404 et 500 vers des pages personnalisées
ErrorDocument 404 /error/404.php
ErrorDocument 500 /error/500.php

# Empêcher l'accès direct aux fichiers PHP dans certains répertoires
<FilesMatch "\.php$">
    Deny from all
</FilesMatch>

# Permettre l'accès aux fichiers PHP dans certains répertoires spécifiques comme "includes"
<Directory "/includes">
    Allow from all
</Directory>
